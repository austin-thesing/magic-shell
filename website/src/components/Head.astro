---
import type { Props } from '@astrojs/starlight/props';
import Schema from './Schema.astro';

// Get page info from Starlight
const { entry } = Astro.props;
const title = entry?.data?.title || 'Magic Shell Documentation';
const description = entry?.data?.description || 'Learn how to use Magic Shell to transform natural language into terminal commands';
---

<!-- Schema.org Structured Data for Documentation -->
<Schema 
  type="article" 
  title={title} 
  description={description}
  url={Astro.url.href}
/>
